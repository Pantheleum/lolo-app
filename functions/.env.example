# ============================================
# LOLO Cloud Functions Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# --- AI Provider API Keys ---
ANTHROPIC_API_KEY=sk-ant-xxx
OPENAI_API_KEY=sk-xxx
GOOGLE_AI_API_KEY=xxx
XAI_API_KEY=xxx

# --- AI Router ---
AI_ROUTER_INTERNAL_URL=http://localhost:5001/api/v1/ai/route
INTERNAL_API_KEY=your-internal-api-key-here

# --- Redis (for rate limiting + caching) ---
REDIS_URL=redis://localhost:6379

# --- RevenueCat (subscriptions) ---
REVENUECAT_API_KEY=xxx
REVENUECAT_WEBHOOK_SECRET=whsec_xxx

# --- Encryption (for SOS session data) ---
ENCRYPTION_KEY=your-32-byte-hex-key-here

# --- Firebase (auto-configured in Cloud Functions) ---
# GOOGLE_APPLICATION_CREDENTIALS is set automatically
# FIREBASE_CONFIG is set automatically

# --- Optional: External Services ---
# GOOGLE_CALENDAR_CLIENT_ID=xxx
# GOOGLE_CALENDAR_CLIENT_SECRET=xxx
